{
  "version": 2,
  "builds": [
    {
      "src": "Backend/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/Backend" },
    { "src": "/(.*)", "dest": "/Frontend/$1" }
  ]
}
