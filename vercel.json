{
  "version": 2,
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "env": {
          "REACT_APP_API_URL": "/api"
        }
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/Backend" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/Frontend" }
  ]
}
